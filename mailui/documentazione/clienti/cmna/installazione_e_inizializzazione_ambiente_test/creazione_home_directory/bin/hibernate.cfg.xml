<hibernate-configuration>
    <session-factory>
      <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:mmaster/mmaster@(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=172.30.36.176)(PORT=1521))(CONNECT_DATA=(SERVER=dedicated)(SID=PROTOWIN)))</property>
